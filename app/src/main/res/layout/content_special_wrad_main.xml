<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    android:layout_marginTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kmcmanipal.special_wrad_main"
    tools:showIn="@layout/activity_special_wrad_main">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ward Name :   "
                android:id="@+id/textView3"
                android:textStyle="bold" />

            <EditText
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextWardName"
                android:textSize="20sp"
                android:ems="10"
                android:singleLine="true" />

        </LinearLayout>

        <CheckBox
            android:layout_width="185dp"
            android:layout_height="60dp"
            android:text="Cleanliness"
            android:id="@+id/chkbx_cleanliness"
            android:checked="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:focusable="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="Housekeeping register updated"
            android:id="@+id/chkbx_housekeep"
            android:checked="false"
            android:textColor="#000000"
            android:textSize="20dp" />

        <CheckBox
            android:layout_width="305dp"
            android:layout_height="85dp"
            android:text="Pharmacy indents received"
            android:id="@+id/chkbx_pharmacy"
            android:checked="false"
            android:textColor="#000000"
            android:textSize="20dp" />




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:layout_weight="0.05"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/button_save"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>


